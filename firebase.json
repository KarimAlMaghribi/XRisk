{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "proxy"
      },
      {
        "source": "/workflow/**",
        "function": "proxy"
      },
      {
        "source": "/login",
        "function": "proxy"
      },
      {
        "source": "/logout",
        "function": "proxy"
      },
      {
        "source": "/register",
        "function": "proxy"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
